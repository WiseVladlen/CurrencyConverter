<resources>
    <style name="Theme.CurrencyConverter" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>

        <item name="colorAccent">@color/neon_red</item>

        <item name="colorControlNormal">@color/davy_gray</item>

        <item name="android:textColorHint">@color/grey</item>
        <item name="android:editTextColor">@color/black</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="bottomSheetDialogTheme">@style/Theme.CurrencyConverter.BottomSheetDialog</item>
    </style>

    <style name="PopupMenuStyle" parent="@style/Theme.AppCompat.Light">
        <item name="android:overlapAnchor">true</item>
    </style>

    <style name="Theme.CurrencyConverter.NoActionBar" parent="Theme.CurrencyConverter">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="Theme.CurrencyConverter.BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="Theme.CurrencyConverter.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.CurrencyConverter.BottomSheet</item>
        <item name="colorAccent">@color/neon_red</item>
    </style>

    <style name="Theme.CurrencyConverter.Text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.CurrencyConverter.Bold" parent="Theme.CurrencyConverter.Text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.CurrencyConverter.Normal" parent="Theme.CurrencyConverter.Text">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.CurrencyConverter.Bold.ToolbarTitle" parent="Theme.CurrencyConverter.Bold">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Theme.CurrencyConverter.CurrencyTitle" parent="Theme.CurrencyConverter.Normal">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.CurrencyConverter.CurrencySubtitle" parent="Theme.CurrencyConverter.Normal">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Theme.CurrencyConverter.Toolbar">
        <item name="android:textViewStyle">@style/Theme.CurrencyConverter.Bold.ToolbarTitle</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="imageButtonStyle">@style/Theme.CurrencyConverter.ImageButton</item>
    </style>

    <style name="Theme.CurrencyConverter.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/ripple_oval_background</item>
    </style>

    <style name="Theme.CurrencyConverter.Ripple">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Theme.CurrencyConverter.Ripple.Rect" parent="Theme.CurrencyConverter.Ripple">
        <item name="android:background">@drawable/ripple_background</item>
    </style>

    <style name="Theme.CurrencyConverter.Ripple.Oval" parent="Theme.CurrencyConverter.Ripple">
        <item name="android:background">@drawable/ripple_oval_background</item>
    </style>

    <style name="Theme.CurrencyConverter.BottomSheetItem" parent="Theme.CurrencyConverter.Ripple.Rect">
        <item name="android:textSize">18sp</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Theme.CurrencyConverter.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>

    <style name="Theme.CurrencyConverter.EditText.Number" parent="Theme.CurrencyConverter.EditText">
        <item name="android:inputType">number</item>
    </style>

    <style name="Theme.CurrencyConverter.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/chip_background</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Theme.CurrencyConverter.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_ripple_background</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Theme.CurrencyConverter.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="borderWidth">1dp</item>
        <item name="elevation">0dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_margin">16dp</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="pressedTranslationZ">0dp</item>
    </style>
</resources>